{
  "name": "soroban-gas-relayer",
  "version": "1.0.0",
  "description": "Gas sponsorship relayer for Soroban smart contracts",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "watch": "ts-node-dev --respawn --transpile-only src/server.ts",
    "docker:build": "npm run build && docker build -t soroban-relayer .",
    "docker:run": "docker run -p 3000:3000 --env-file .env soroban-relayer",
    "docker:compose": "docker-compose up -d",
    "docker:compose-dev": "docker compose watch",
    "docker:compose-dev-legacy": "docker-compose -f docker-compose.dev.yml up --build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=scripts/test.ts",
    "test:unit": "jest --testPathPattern=__tests__/soroban-utils.test.ts"
  },
  "keywords": [
    "soroban",
    "stellar",
    "gas",
    "relayer",
    "sponsor"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@stellar/stellar-sdk": "^12.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "fs-extra": "^11.3.2",
    "morgan": "^1.10.1",
    "node-fetch": "^2.7.0",
    "object-assign": "^4.1.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/express-rate-limit": "^5.1.3",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.5.0",
    "@types/node-fetch": "^2.6.9",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "jest": "^29.7.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
